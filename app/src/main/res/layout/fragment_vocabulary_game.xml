<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context="com.axelcollet.tp_android_varo_collet.MainActivity">


    <ProgressBar
        android:id="@+id/ProgressBarGame"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_height="0dp"
        android:layout_weight="0.03"
        android:progress="0"
        android:progressDrawable="@drawable/progress_bar_game" />

    <TextView
        android:id="@+id/TextView_word_tofind"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.47"
        android:background="@color/colorPrimary"
        android:text="mot de base"
        android:gravity="center"
        android:textSize="23dp"/>

    <EditText
        android:id="@+id/EditText_player_answer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.40"
        android:background="@color/colorAccent"
        android:inputType="text"
        android:textAlignment="center"
        android:textStyle="italic"
        android:theme="@style/AppTheme" />

    <Button
        android:id="@+id/button_validate"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="203dp"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:layout_gravity="center"

        android:background="@drawable/button_rounded"
        android:text="@string/validate"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
